.container(ng-controller="LoginCtrl")
  input.email(type="text", ng-model="form.email", placeholder="Email")
  input.firstname(type="text", ng-model="form.name.first", placeholder="First Name")
  input.lastname(type="text", ng-model="form.name.last", placeholder="Last Name")
  input.password(type="password", ng-model="form.password", placeholder="Password")
  button.btn(ng-click="register()") Register